      </form>
    </div>
  </div>
</div>

<div class="shadow-lg p-3 mb-5 bg-white rounded">
  <div class="container">
    <img class="navbar-brand" width="100px" src="/assets/download.png">
    <a href="" class="btn btn-warning tambah" data-toggle="modal" data-target="#exampleModal" data-whatever="@fat" style="margin-left: 76%; color: white; width: 100px;" >Add</a>
    </div>
</div>
<div class="container" style="margin-left: 400px;">
    <div class="shadow-lg p-3 mb-5 bg-white rounded" style="width: 500px;">
        <form method="post" action="/update">
        <div class="form-group">
          <label  for="exampleFormControlSelect1">Name Chasier</label>
          <select name="chasier" class="form-control name_chasier">
            
          </select>
         </div>
         <div class="form-group">
            <label for="exampleFormControlSelect1">Name Category</label>
            <select name="category" class="form-control name_category">
            
            </select>
          </div>

          <div class="form-group">
            <label for="exampleInputEmail1">Price</label>
            <input name="price" type="text" class="form-control" id="exampleInputEmail1" value="{{ price }}" aria-describedby="emailHelp">
          </div>

          <div class="form-group">
              <label for="exampleInputEmail1">Menu</label>
              <input name="name" type="text" class="form-control" value="{{ name }}" id="exampleInputEmail1" aria-describedby="emailHelp">
              <input type="hidden" name="id" value="{{ id }}">
            </div>

        <div class="form-groub">
            <input type="submit" class="btn btn-warning" style="color: white;" value="Update">
        </div>
        </div>


 </form>
    </div>
  
  </div>    


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script type="text/javascript">

      //ambil data kasir
      fetch('/AmbilDataChasier')
        .then(response => response.json())
        .then(response => {
          let data_kasir = "";
            response.forEach(d => {

              if (d.id_chasier == {{ id_chasier }}) {
                data_kasir += `<option selected value="${d.id_chasier}">${d.name_chasier}</option>`;
              }else{
                data_kasir += `<option value="${d.id_chasier}">${d.name_chasier}</option>`;
              }
              
                 
            });
            document.querySelector('.data_chasier').innerHTML = data_kasir;
            document.querySelector('.name_chasier').innerHTML = data_kasir;

          
        
        });

        fetch('/AmbilDataCategory').then(response => response.json())
          .then(response => {
            let data_category = "";
            response.forEach(d => {
              if (d.id_category == {{ id_category }}) {
                 data_category += `<option selected value="${d.id_category}">${d.name_category}</option>`;
               }else{
                data_category += `<option value="${d.id_category}">${d.name_category}</option>`;
               }
            });
            document.querySelector('.data_category').innerHTML = data_category;
            document.querySelector('.name_category').innerHTML = data_category;
          })


    </script>
  </body>
</html>

{{/each}}
